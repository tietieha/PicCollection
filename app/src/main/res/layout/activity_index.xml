<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Frame_index"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/imagevv"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Pic_Method"

        android:gravity="center"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/camera"
                    android:id="@+id/Pic_camera"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="照    相"
                    android:textColor="#ffff00"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton

                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/picadd"
                    android:id="@+id/Pic_file"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="选    图"
                    android:textColor="#ffff00"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageButton
            android:scaleType="centerCrop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/setup"
            android:src="@drawable/setup"
             />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设  置"
            android:textColor="#ffff00"
            android:textAlignment="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right" >
        <ImageButton
            android:scaleType="centerCrop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/gallery"
            android:src="@drawable/gallery"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="图  库"
            android:textColor="#ffff00"
            android:textAlignment="center"
            />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textColor="#ffff00"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />
    <LinearLayout
        android:id="@+id/Pro_plane"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp">

            <TextView
                android:id="@+id/index_company_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未命名"
                android:textColor="#01544A"
                android:textSize="14dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Pro_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5a5a5a"
                android:text="工程名称："
                android:textStyle="bold"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/Pro_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未命名"
                android:textSize="14dp"
                />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">
            <TextView
                android:id="@+id/Pro_identity_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5a5a5a"
                android:textStyle="bold"
                android:text="施工部位："
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/Pro_identity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5a5a5a"
                android:text="施工日期："
                android:textStyle="bold"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/Pro_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="14dp"
                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016/"
        android:id="@+id/Project_CurrentTime"
        android:textColor="#ffd700"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp" />
</FrameLayout>
